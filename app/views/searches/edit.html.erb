
<div class="sidebar">
<h1>Issue Search</h1>
  <%= render 'form' %>
  </div>

  <div class="floater">
  <div class="issues">
    <ul>Open Issues
      <div class="list_of_issues">
        <% @issues.each do |issue| %>
          <% @link_text = issue[1] + ' <strong> - ' + issue[0] + '</strong>' %>
          <li>
            <div class = "right-arrow"></div>
            <a href=<%=issue[2]%>><%= raw @link_text %></a>
          </li>
        <% end %>
      </div>
    </ul>
  </div>
</div>

